# Little script to download videos from .m8u4 urls
tum-dld () {
    if [[ -z "$1" || -z "$2" ]]; then
        echo "Usage: $0 <url> <output>"
        echo "<url>    : .m8u4 url"
        echo "<output> : path (should end in .mp4)"
        return
    fi
    echo "url: $1" 
    echo "output: $2"

    choice=n
    echo "Continue? [y/n] "
    read choice
    case "$choice" in
        y|Y) ffmpeg -i "$1" -c copy -bsf:a aac_adtstoasc "$2";;
        *) echo "exiting..."; return;;
    esac
}